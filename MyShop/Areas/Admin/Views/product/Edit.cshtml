@using Models.Models
@model Product

<form method="post">
    <div class="border p-3 mt-3 bg-body">

        <div class="row pb-3">

            <h2 class="text-white">
                <i class="bi bi-pencil"></i>  Edit Product
            </h2>
        </div>


        <div class="mb-3">

            <label asp-for="Title" class="p-0"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-info "></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="p-0"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-info"></span>

        </div>

        <div class="mb-3">
            <label asp-for="Price" class="p-0"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-info"></span>

        </div>

        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn  btn-info form-control">Update </button>
            </div>

            <div class="col-6 p">
                <a asp-controller="Product" asp-action="Index" class="btn btn-primary border form-control">Back To List</a>
            </div>

        </div>
    </div>

</form>


