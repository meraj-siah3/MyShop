@using Models.Models
@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">

            <div class="row p-2">

                <div class="col-12 p-1">
                    <div class="card border-0 p-1 shadow border-top border-5 rounded bg-body" >
                        <img src="@product.ImageUrl" class="card-img-top rounded" />
                        <div class="card-body p-0">
                            <div class="pl-1">
                                <p class=" card-title h5  text-white opacity-88  text-center">@product.Title</p>
                            </div>

                            <div class="pl-1">
                                <p class="  text-white text-opacity-100  text-center">price:<span>@product.Price.ToString("c")</span></p>
                            </div>
                        </div>
                        <div>
                            <a href="#" class="btn btn-primary bg-gradient border-0 form-control">
                                Details
                            </a>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    }
</div>